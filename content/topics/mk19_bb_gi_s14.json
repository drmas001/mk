"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"ee53c1",
"class":"cell txt l",
"children":[
"Nocturnal diarrhea and diabetes mellitus or ",
{
"type":"abbreviation",
"title":"systemic sclerosis",
"children":[
"SSc"
]
}
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"a2f75b",
"class":"cell txt l",
"children":[
"SIBO; hydrogen breath test or empiric antibiotic trial"
]
},
" "
]
}
]
},
{
"type":"tag",
"tagName":"tr",
"attrs":{
"className":"group_1-6 row-even"
},
"children":[
{
"type":"tag",
