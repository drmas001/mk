"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"9e1d40",
"class":"cell txt l",
"children":[
"Use of artificial sweeteners or fructose"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"f8f51a",
"class":"cell txt l",
"children":[
"Carbohydrate intolerance; dietary exclusion or hydrogen breath test"
]
},
" "
]
}
]
},
{
"type":"tag",
"tagName":"tr",
"attrs":{
"className":"group_1-5 row-odd"
},
"children":[
{
"type":"tag",
