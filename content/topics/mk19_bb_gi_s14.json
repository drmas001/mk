"attrs":{
"className":"group_1-2 row-even"
},
"children":[
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"734c4e",
"class":"cell txt l",
"children":[
"Diarrhea mainly in women aged 45-60 years, nocturnal diarrhea, normal colonoscopy"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"d0a1c2",
"class":"cell txt l",
"children":[
"Microscopic colitis; stop NSAIDs/PPIs; biopsy needed to confirm diagnosis"
]
},
" "
]
}
]
},
{
"type":"tag",
"tagName":"tr",
"attrs":{
