"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"01c016",
"class":"cell txt l",
"children":[
"Urticarial"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"e6502c",
"class":"cell txt l",
"children":[
"Second most common drug reaction type with or without angioedema"
]
},
" "
]
}
]
}
]
}
]
