"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"aac0f7",
"class":"cell txt l",
"children":[
"Severe essential tremor"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"8b2ddb",
"class":"cell txt l",
"children":[
"Terminal tremor can be seen but often without prominent cerebellar dysmetria"
]
},
" "
]
}
]
},
{
"type":"tag",
"tagName":"tr",
"attrs":{
"className":"group_1-2 row-even"
},
