"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"a2cc38",
"class":"cell txt li",
"children":[
"Severe symptoms or risk factors for extension"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"47fde1",
"class":"cell txt l",
"children":[
"3-6 months"
]
},
" "
]
}
]
},
{
