"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"35dc54",
"class":"cell txt l",
"children":[
"Definite case"
]
},
" ",
{
"type":"p",
"hlId":"386e44",
"class":"cell txt li",
"children":[
"Isolation of GABHS from a sterile site (blood, cerebrospinal fluid, operative wound)"
]
},
" "
]
}
]
},
{
"type":"tag",
"tagName":"tr",
"attrs":{
"className":"group_1-2 row-even"
},
"children":[
{
