"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"899df7",
"class":"cell txt l",
"children":[
"Scleroderma renal crisis"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"84837b",
"class":"cell txt l",
"children":[
"ACE inhibitors (typically captopril), plasma exchange"
]
},
" ",
{
"type":"p",
"hlId":"836bcf",
"class":"cell txt l",
"children":[
"Dialysis"
]
},
" "
]
}
]
},
{
"type":"tag",
"tagName":"tr",
"attrs":{
"className":"group_1-7 row-odd"
},
"children":[
{
"type":"tag",
