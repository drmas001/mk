"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"bfa772",
"class":"cell txt l",
"children":[
"Classic: periumbilical then RLQ pain, emesis, ↑ leukocyte count"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"46d610",
