"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"ef024b",
"class":"cell txt l",
"children":[
"Gastrointestinal"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"835996",
"class":"cell txt l",
"children":[
"60% with ileocolitis on colonoscopy"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"3ab274",
"class":"cell txt l",
"children":[
"Dysbiosis may play a role in inflammation"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"9fe773",
"class":"cell txt l",
"children":[
"GI inflammation is hallmark"
]
},
" "
]
},
{
"type":"tag",
"tagName":"td",
"attrs":{
"rowSpan":"1",
"colSpan":"1"
},
"children":[
" ",
{
"type":"p",
"hlId":"d70972",
"class":"cell txt l",
"children":[
"Preceding GI infection common"
]
},
" "
]
}
]
},
